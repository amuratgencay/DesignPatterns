@model DesignPattern.WebApp.Entity.vmBehavioralDesignPatterns
@{
    ViewBag.Title = "BehavioralPatterns";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creational Patterns</h1>
<div class="row">
    <hr>

    <table class="table table-bordered col-md-6">
        <tbody>
            <tr><th style="width: 5%; text-align: center;">S.N.</th><th>Behavioral Patterns</th></tr>
            @foreach (var item in Model.BehavioralDesignPatterns)
            {
                <tr><td style="text-align: center;">@item.Number</td><td><b><a href="#">@item.Name Pattern</a></b><br></td></tr>
            }
        </tbody>
    </table>
    <p class="col-md-6">These design patterns are specifically concerned with communication between objects.</p>

</div>